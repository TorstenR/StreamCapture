<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>  
    <PreserveCompilationContext>true</PreserveCompilationContext>
    <DebugType>portable</DebugType>
    <AssemblyName>StreamCapture</AssemblyName>
    <OutputType>Exe</OutputType>
    <PackageId>StreamCapture</PackageId>
    <RuntimeIdentifiers>win10-x64;osx.10.11-x64</RuntimeIdentifiers>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="keywords.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Controllers\**"> 
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory> 
    </Content>
    <Content Include="Views\**"> 
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory> 
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore" Version="1.*" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="1.*" />
    <PackageReference Include="Microsoft.AspNetCore.Server.Kestrel" Version="1.*" /> 
    <PackageReference Include="Microsoft.AspNetCore.Server.Kestrel.Transport.Libuv" Version="3.*" />
    <PackageReference Include="Microsoft.AspNetCore.StaticFiles" Version="1.*" /> 
    <PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="1.*" /> 
    <PackageReference Include="Microsoft.Identity.Client" Version="4.*" />     
    <PackageReference Include="Newtonsoft.Json" Version="9.0.1" />
    <PackageReference Include="System.Runtime.Serialization.Primitives" Version="4.*" />
    <PackageReference Include="System.Text.RegularExpressions" Version="4.*" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="1.*" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="1.*" />
    <PackageReference Include="Microsoft.Extensions.CommandLineUtils" Version="1.*" />
    <PackageReference Include="System.Diagnostics.Process" Version="4.*" />
    <PackageReference Include="MailKit" Version="2.*" />     
  </ItemGroup>

</Project>
